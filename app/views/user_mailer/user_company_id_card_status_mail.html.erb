<%if @user.firstname.present? || @user.lastname.present?%>
	<p>Dear <%=@user.firstname.capitalize rescue nil%> <%=@user.lastname.capitalize rescue nil%>,</p>
<%else%>
	<p>Dear <%=@email%>,<p>
<%end%>
<p>Greetings of the day!</p>
<% if @company_id_card_status == "rejected"  %>
	<p>We are here to inform you that your company ID has been rejected because of the following reason(s)</p>
	<p><b><%= @company_id_card_rejected_reason %></b></p>

<% elsif @company_id_card_status == "accepted" %>
	<p>We are here to inform you that your company ID has been accepted</p>
<% end %>
