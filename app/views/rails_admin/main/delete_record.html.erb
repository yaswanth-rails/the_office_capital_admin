<div style="background-color: #eee;height: 500px;">
  <center>
    <div class="container mt-5 d-flex justify-content-center">
      <div class="card p-3" style="margin-top: 70px;">
        <div class="d-flex align-items-center">
          <div class="ml-3 w-100">
            <div class="image"> 
              <% if @model_name == "User" %>
                <%= render partial: "user_selfie" %>
              <% end %>
            </div>
            <h4 class="mb-0 mt-0"><%=@user.email%></h4> <span><%="#{@user.firstname} #{@user.lastname}"%></span>
            <div class="p-2 mt-2 bg-primary d-flex justify-content-between rounded text-white stats">
              <div class="d-flex flex-column"> 
                <%if @user.tier_verified %>
                  <span class="articles">Verified</span> <span style="color: green;">&#10003;</span> 
                <%else%>
                  <span class="articles">Verified</span> <span style="color: red";>&#10539;</span>
                <%end%>
              </div>
              <div class="d-flex flex-column"> <span class="followers">Total Deposit</span> <span class="number2"><%=@total_deposits%></span> </div>
              <div class="d-flex flex-column"> <span class="rating">Current Holdings</span> <span class="number3"><%=@current_holdings%></span> </div>
            </div>
            
            <!-- <div class="button mt-2 d-flex flex-row align-items-center">  -->
              <%= form_tag(confirm_delete_record_path, method: :get) do  %>
                <h5 class="m-0">Enter OTP :</h5>
                <div class="d-flex flex-row mt-5">
                  <input type="text" class="form-control" name= "otp" autofocus="" required="required">
                </div><br>
                
                <button type="button" class="btn btn-danger form-control" data-toggle="modal" data-target="#exampleModal" data-whatever="Delete Record"> Delete User</button>

                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>

                      <div class="modal-body">
                        <h5 class="modal-title" id="exampleModalLabel">Are you sure, do you want to delete user <b><%=@user.email%>?</h5>
                      </div>

                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <input type="submit" class="btn btn-primary" value="Confirm" />
                      </div>
                    </div>
                  </div>
                </div>  
              <%end%>
            <!-- </div> -->
          </div>
        </div>
      </div>
    </center>
  </div>
