<div class="container">
  <div class="card" style="width: 40rem;">
    <div class="card-body">
      <p class="card-text">
        <div class="proof">
          <%if value.present?%>
            <%= image_tag "#{value}", class: "open-AddImgDialog", id:"test",  data: { target: "#exampleModal", toggle: "modal"}, style: 'width: 100px;height: 100px;overflow: hidden;margin: 0px;margin-top: 5px;' %>
            <%= file_field_tag "#{model}[#{field_name}]", style: 'margin-top: 15px;' %>
          <%else%>
            <%= image_tag ENV['BLACK_ANT'], style: 'width: 100px;height: 100px;overflow: hidden;margin: 0px;margin-top: 5px;' %>
          <% end %>
        </div>
      </p>
      <%=@proof%>
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <center><%= image_tag "", id: "imagepreview" %></center>
              <center>
              <button type="button" id= "zoomin" class="btn btn-info-lg">Zoom in</button>
              <button type="button" id= "zoomout" class="btn btn-info-lg">Zoom out</button>
            </center>
          </div>
        </div>
      </div>  
      <!-- Model close -->
    </div>
  </div>
</div>

<script type="text/javascript">
 $(document).ready(function () {
   $('.proof').click(function (e) {
       var src = $('img', this).attr('src');
       $('#imagepreview').attr("src", src);
       
   });
    $("#zoomin").on("click",function() {
      var GFG = document.getElementById("imagepreview");
      var currWidth = GFG.clientWidth;
      GFG.style.width = (currWidth + 100) + "px";
    })
    
    $("#zoomout").on("click",function() {
      var GFG = document.getElementById("imagepreview");
      var currWidth = GFG.clientWidth;
      GFG.style.width = (currWidth - 100) + "px";
    })
});

</script>

<style type="text/css">
  #imagepreview {
  border-radius: 5px;
  cursor: pointer;
  transition: 0.3s;
}

.modal-dialog {
  width: 98%;
  height: 98%;
  padding: 0;
}

.modal-content {
  height: 100%;
  border-radius: 0;
}

</style>