<h2 style="text-align: center"> Online Users </h2>

<%if !@online_users.blank?%>
	<table class="table table-condensed table-striped">
		<tr>
			<th>S.No</th>
			<th>Name</th>
			<th>Current Sign in ip</th>
			<th>Last Response At</th>
			<th>Platform</th>
		</tr>
		<%@online_users.each_with_index do|user,index|%>
			<tr>
				<td><%=index+1%></td>
				<td>
          <%=link_to user.firstname, show_path(model_name: "User", id: user.id), target: "_blank"%>
          </td>
				<td><%=user.current_sign_in_ip%></td>
				<td><%=user.last_response_at%></td>
				<td><%=user.login_histories.last.os%></td>
			</tr>
		<%end%>
	</table>
	<%= paginate @online_users, theme: 'twitter-bootstrap-3' rescue nil%>
<%else%>
	<h2>There are no online users</h2>
<%end%>
